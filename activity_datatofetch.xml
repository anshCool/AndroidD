<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startbg"
    tools:context=".FetchActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="445dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/movieName1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="140dp"
        android:background="#78866B"
        android:ems="10"
        android:hint="Search any movie"
        android:textColorHint="#FFF380" 
        android:textColor="#FFF380"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/mSearch"
        android:layout_width="90dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/movieName1"
        android:layout_alignParentRight="true"
        android:onClick="show"
        android:text="Search" 
        android:textColor="#800000"
        android:background="#ffffff"/>

    <Button
        android:id="@+id/vPlan"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignLeft="@+id/movieName1"
        android:layout_below="@+id/movieName1"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:onClick="openList"
        android:text="My Movie List"
        android:textColor="#800000" />

</RelativeLayout>

</ScrollView>